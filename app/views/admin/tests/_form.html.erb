<div class="row justify-content-left mt-5">
  <div class="col col-md-4">
    <%= form_with model: [:admin, test] do |form| %>
      <%= render 'shared/errors', resource: test %>
      <div class="form-group">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, id: :test_title, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :level %>
          <%= form.number_field :level, id: :test_level, class: 'form-control'  %>
        </p>
        <p>
          <%= form.label :category_id %>
          <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'dropdown-menu' %>
        </p>
      </div>
      <div class="mt-2">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
