<div class="table-responsive">
  <h3 class="mt-2 mb-2 text-center"><%= t('.header') %></h3>
  <%= render 'shared/errors', resource: @test %>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th><%= t('.id') %></th>
        <th><%= t('.name') %></th>
        <th><%= t('.level') %></th>
        <th><%= t('.count_question') %></th>
        <th><%= t('.active') %></th>
        <th colspan="3"><%= t('.action') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
</div>
<%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary mb-3 mt-3" %>
<%= link_to t('.gists'), admin_gists_path, class: "btn btn-primary mb-3 mt-3" %>
