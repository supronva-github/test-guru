<div class="table-responsive">
  <h3 class="mt-2 mb-2 text-center"><%= t('.header') %></h3>
  <%= render 'shared/errors', resource: @badge %>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th><%= t('.id') %></th>
        <th><%= t('.name') %></th>
        <th><%= t('.image') %></th>
        <th colspan="3"><%= t('.action') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @badges %>
    </tbody>
  </table>
</div>
<div class="col-md-8">
  <%= link_to t('common.back'), admin_tests_path, class: "btn btn-primary mb-3 mt-3" %>
  <%= link_to t('.new_badge'), new_admin_badge_path, class: "btn btn-primary mb-3 mt-3" %>
</div>
