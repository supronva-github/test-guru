<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: feedback, class: "form-group" do |form| %>
        <%= render 'shared/errors', resource: feedback %>
        <div class="form-group">
          <p>
            <%= form.label :title %>
            <%= form.text_field :title, id: :feedback_title, class: 'form-control' %>
          </p>
          <p>
            <%= form.label :body %>
            <%= form.text_field :body, id: :feedback_body, class: 'form-control' %>
          </p>
        </div>
        <div class="mt-3">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
