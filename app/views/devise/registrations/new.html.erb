<div class="row justify-content-center mt-5">
  <div class="col-md-4">
    <h2><%= t('.sign_up')%></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-group") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <p>
          <%= f.label :first_name, class: "control-label" %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </p>

        <p>
          <%= f.label :last_name, class: "control-label" %>
          <%= f.text_field :last_name, class: 'form-control'%>
        </p>

        <p>
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, autofocus: true, class: 'form-control'%>
        </p>

        <p>
          <%= f.label :password, class: "control-label" %>
          <% if @minimum_password_length %>
          <em>(<%= t('.minimum_password_length', length: @minimum_password_length) %>)</em>
          <% end %>
          <%= f.password_field :password, class: 'form-control'%>
        </p>
        
        <p>
          <%= f.label :password_confirmation, class: "control-label" %>
          <%= f.password_field :password_confirmation, class: 'form-control'%>
        </p>
        <p>
          <%= octicon 'check', class: 'text-success hide' %>
          <%= octicon 'alert', class: 'text-danger hide' %>
        </p>

        <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
      </div>

      <div class="mt-2 mb-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
