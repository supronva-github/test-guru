<div class="row justify-content-left mt-5">
  <div class="col col-md-4">
    <%= form_with model: [:admin, badge] do |form| %>
      <%= render 'shared/errors', resource: badge %>
      <div class="form-group">
        <p>
          <%= form.label :name %>
          <%= form.text_field :name, id: :badge_name, class: 'form-control' %>
        </p>
        <p>
          <%= form.file_field :image, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :rule_id %>
          <%= form.collection_select :rule_id, BadgeRule.all, :id, :name, prompt: t('helpers.select.rule'), class: 'dropdown-menu' %>
        </p>
      </div>
      <div class="mt-2">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
