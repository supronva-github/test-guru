 <table border="1">
   <caption><%= @question.body %></caption>
  <tr>
    <th><%= t('.id')%></th>
    <th><%= t('.answers')%></th>
    <th><%= t('.correct')%></th>
    <th colspan="3"><%= t('.action')%></th>
  </tr>
